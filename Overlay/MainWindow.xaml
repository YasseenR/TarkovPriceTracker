<Window x:Class="TarkovAssistant.Overlay.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="TarkovPriceOverlay" Height="150" Width="250"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="#55FFFFFF"
        Topmost="True"
        ShowInTaskbar="True"
        Loaded="Window_Loaded">
<Canvas x:Name="RootCanvas" IsHitTestVisible="False">
    <TextBlock Text="Overlay Running"
               FontSize="24"
               FontWeight="Bold"
               Foreground="Lime"
               Canvas.Left="0"
               Canvas.Top="0"/>
</Canvas>

</Window>
